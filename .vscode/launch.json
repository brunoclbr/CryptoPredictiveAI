{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug Prediction API",
            "cargo": {
                "args": [
                    "build",
                    "--bin=prediction-api",
                    "--package=prediction-api",
                    "--manifest-path=services/prediction-api/Cargo.toml"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": []
        }
    ]
}